/* pages/newsRead/index.wxss */
view {
    overflow: none;
  }
  
  .banner {
    position: relative;
    width: 100%;
    height: 200px;
    color: #fff;
  }
  
  .banner image {
    width: 100%;
    height: 100%;
    filter: brightness(65%);
  }
  
  .banner text.title {
    position: absolute;
    bottom: 23px;
    left: 10px;
  }
  
  .banner text.image-source {
    position: absolute;
    bottom: 5px;
    right: 10px;
    font-size: 10px;
  }
  
  .b-title {
    font-size: 16px;
    padding: 10px;
    font-weight: 700;
  }
  
  .info {
    box-sizing:border-box;
    display: flex;
    padding: 10px;
    align-items: center;
    justify-content: center;
  }
  
  .info .info-img {
    flex: 0 0 25px;
    width: 25px;
    height: 25px;
    margin-right: 5px;
  }
  
  .info .bio {
    font-size: 12px;
    color: #888;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
  }
  
  .rich-img {
    display: block;
    margin: 0 auto;
    width: 90%;
    padding: 10px 0
  }
  
  .rich-p {
    font-size: 14px;
    padding: 10px;
  }
  
  .rich-ul {
    box-sizing: border-box;
    list-style-type: circle;
    font-size: 14px;
  }
  
  .rich-ul .rich-li {
    padding: 5px 10px 5px 0;
  }
  
  .body {
    width: 100%;
  }