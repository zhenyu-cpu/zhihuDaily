/* components/storiesCard/index.wxss */
.card {
    width: 100%;
    height: 150px;
    text-align: left;
    font-style: initial;
    margin-top: 2px;
    margin-bottom: 2px;
    position: relative;
}
.card_image{
    width: 60px;
    height: 60px;
    position: absolute;
    top: 10%;
    right: 3px;
    margin-left: 30px;
}
.card-title{
    position: absolute;
    width: 80%;
    left: 0px;
    top: 20px;
}
.card_hint{
    position: absolute;
    left: 0px;
    bottom: 20px;
    font-size: small;
}