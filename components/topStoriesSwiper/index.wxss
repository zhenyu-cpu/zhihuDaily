/* components/imageSwiper/index.wxss */
.container {
    position: relative;
    background: #ffffff;
}

.swiper-box {
    width: 750rpx;
    height: 560rpx;
}

.targetImg {
    width: 100%;
    height: 560rpx;
}

/*小圆点  */
.dots {
    width: 100%;
    height: 4rpx;
    display: flex;
    position: absolute;
    bottom: 30rpx;
}

.dotsBox {
    height: 4rpx;
    display: flex;
    margin: 0 auto;
}

/*未选中时的小圆点样式 */
.dot {
    width: 26rpx;
    height: 4rpx;
    border-radius: 2rpx;
    margin-right: 10rpx;
    background-color: #ffffff;
    opacity: 0.4;
}

/*选中以后的小圆点样式  */
.dot-active {
    opacity: 1;
}

.newsTitle {
    position: absolute;
    left: 10px;
    bottom: 50px;
    color: #fff;
    font-weight: bold,
}

.newsAuthor {
    position: absolute;
    left: 10px;
    bottom: 20px;
    color: #fff;
    font-size: small;
}